{
    "database": "inventory",
    "collection": "stock",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "user_id": "%%user.id"
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        },
        {
            "name": "non-owner",
            "apply_when": {},
            "read": true,
            "write": false,
            "insert": false,
            "delete": false,
            "additional_fields": {}
        }
    ],
    "schema": {
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "user_id": {
                "bsonType": "string"
            }
        }
    }
}
